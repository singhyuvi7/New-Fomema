<div>
    Foreign Worker Information:<br>
    <i>Maklumat perkerja asing</i><br>

    Code : <%= @foreign_worker.code %><br>
    <i>Kod</i><br>

    Name : <%= @foreign_worker.name %><br>
    <i>Nama:</i><br>

    Passport Number : <%= @foreign_worker.passport_number %><br>
    <i>Nombor Pasport</i><br>

    Country of Origin: <%= @foreign_worker.country.name %><br>
    <i>Negara Asal</i><br>

    Date of Birth : <%= @foreign_worker.date_of_birth.try(:strftime, '%d/%m/%Y') %><br>
    <i>Tarikh Lahir</i><br>

    Gender : <%= @foreign_worker.gender_name %><br>
    <i>Jantina</i><br>

    <% if !@agency.nil? %>
        Employer Name : <%= "#{@employer.name} (#{@employer.code})" %><br>
        <i>Nama Majikan</i><br>
    <% elsif !@foreign_worker.employer_supplement.nil? %>
        Supplementary Employer Name : <%= "#{@foreign_worker.employer_supplement.name}" %><br>
        <i>Nama Majikan Tambahan</i><br>
    <% end %>
</div>

