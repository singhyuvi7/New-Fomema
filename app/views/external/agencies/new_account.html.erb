    <div class="container text-center " style=" padding-top:50px">
        <img src="<%= image_path('logo/fomema-logo.png')%>" class="img-responsive" style="max-height: 100px">
    </div>

<div class="container">

    <div class="margin-top-30">
        <h2 class="text-center text-white">
            Welcome to Agency Registration Portal (FOMEMA)
        </h2>
    </div>

    <div class="container container-blue margin-top-30">

        <h3 class="text-center">Register new account</h3>
        <% flash.each do |key, value| %>
            <p class="text-center text-<%= key %>"><%= value %></p>
        <% end %>
        <div class="margin-top-30">
            <%= form_tag create_new_account_external_agencies_path, method: "post", class: '' do %>
            <div class="form-group row">
                <%= email_field_tag :email, nil, class: 'form-control col-md-4 offset-md-2', placeholder: "Email", autofocus: true, autocomplete: false, required: true %>
                <%= submit_tag "Register", class: 'btn btn-fomema btn-blue col-md-2 offset-md-1' %>
                <%= link_to "Cancel", external_root_path, class: 'btn btn-fomema btn-blue col-md-2' %>
            </div>
        </div>
        <% end %>
        <div>&nbsp;</div>
    </div>

</div>
