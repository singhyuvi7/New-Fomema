<div class="card">
    <div class="card-body">
        <div class="row">
            <label class="col-md-3 col-form-label">Payment Code</label>
            <div class="col-md-9">
                <div class="form-control-plaintext"><%= @refund.code %></div>
            </div>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">Payment Date</label>
            <div class="col-md-9">
                <div class="form-control-plaintext"><%= @refund.date&.strftime("%d/%m/%Y") %></div>
            </div>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">Amount (RM) </label>
            <div class="col-md-9">
                <div class="form-control-plaintext"><%= number_to_currency(@refund.amount, unit: "") %></div>
            </div>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">Category</label>
            <div class="col-md-9">
                <div class="form-control-plaintext"><%= Refund::CATEGORIES[@refund.category] %></div>
            </div>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">Payment Status</label>
            <div class="col-md-9">
                <div class="form-control-plaintext"><%= Refund::STATUSES[@refund.status] %></div>
            </div>
        </div>
    </div>
</div>