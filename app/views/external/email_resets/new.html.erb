<div class="container">

    <div class="margin-top-30">
        <h2 class="text-center text-white">
            Welcome to Foreign Workersâ€™ Medical Examination Online Registration Portal (FOMEMA)
        </h2>
    </div>

    <div class="container-blue-portal margin-top-30">

        <h3 class="text-center">First Time Login</h3>
        <%=render "/shared/all_flash" %>

        <div class="text-center text-danger mt-4">
          <%= flash[:recaptcha_error] %>
        </div>

        <div class="margin-top-30">
            <%= form_for @email_reset, url: external_email_resets_path do |form| %>

            <div class="form-group row">
            <div style="width: 300px;margin: auto;">
                <%= form.text_field :code, class: 'form-control', required: true, placeholder: "Employer Code" %>
                <p class="help-block">Example: E12A123456</p>
            </div>
            </div>

            <div class="form-group row">
            <div style="width: 300px;margin: auto;">
                <%= form.text_field :identity_code, class: 'form-control', required: true, placeholder: "IC No. or Company ROC" %>
                <p class="help-block">Example: 800101101234 / 123456W</p>
            </div>
            </div>

            <div class="form-group row">
            <div style="width: 300px;margin: auto;">
                <%= form.email_field :email, class: 'form-control', required: true, placeholder: "Email" %>
            </div>
            </div>

            <div class="form-group row">
                <%= submit_tag "Submit", class: 'btn btn-fomema btn-blue-portal col-md-2 offset-md-4' %><div>&nbsp;&nbsp;&nbsp;&nbsp;</div>
                <%= link_to "Cancel", external_root_path, class: 'btn btn-fomema btn-red-portal col-md-2' %>
            </div>

            <div class="form-group row">
                <div style="width: 300px;margin: auto;" class="">
                    <%= recaptcha_tags %>
                </div>
            </div>

            <% end %>
        </div>
        <div>&nbsp;</div>
    </div>
    <!-- /.container-blue -->
</div>
