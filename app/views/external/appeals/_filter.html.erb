<div class="card-header">Filter</div>

<%= form_for internal_appeals_path, method: :get, id: "transaction-filter-form" do %>
    <%= hidden_field_tag "per", params[:per] || get_per_options.first %>

    <div class="card-body">
        <div class="form-group row">
            <label for="filter_code" class="col-sm-2 col-form-label">Transaction Code</label>

            <div class="col-sm-4">
                <input type="text" name="code" id="filter_code" value="<%= params[:code] %>" class="form-control">
            </div>

            <label for="status" class="col-sm-2 col-form-label">Status</label>

            <div class="col-sm-4">
                <%= select_tag :status, options_for_select(MedicalAppeal::STATUSES.invert, params[:status]), include_blank: form_select_option_text, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group row">
            <label for="worker_code" class="col-sm-2 col-form-label">Worker Code/Name</label>

            <div class="col-sm-4">
                <input type="text" name="worker_code" id="worker_code" value="<%= params[:worker_code] %>" class="form-control">
            </div>

            <label for="filter_order_code" class="col-sm-2 col-form-label">Order Code</label>

            <div class="col-sm-4">
                <input type="text" name="order_code" id="filter_order_code" value="<%= params[:order_code] %>" class="form-control">
            </div>
        </div>
    </div>

    <div class="card-footer text-right">
        <a href="<%= external_transactions_path %>" class="btn btn-primary">Clear</a>
        <button type="submit" form="transaction-filter-form" class="btn btn-primary">Filter</button>
    </div>
<% end %>