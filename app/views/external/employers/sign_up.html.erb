<div class="container text-center" style="padding-top:50px">
    <img src="<%= image_path('external_bg_logo.png')%>" class="img-responsive" style="max-height: 180px">
</div>

<div class="container-fluid">
    <div class="margin-top-30">
        <h2 class="text-center text-white">
            Welcome to Foreign Workersâ€™ Medical Examination Online Registration Portal (FOMEMA)
        </h2>
    </div>

    <div class="container container-blue-portal margin-top-30">

        <h3 class="text-center">Sign Up</h3>
        <% if flash[:error] %>
            <p class="text-center text-error"><%= flash[:error] %></p>
        <% end %>
        <% if flash[:dark] %>
            <p class="text-center text-dark"><%= flash[:dark] %></p>
        <% end %>

        <div class="text-center text-danger mt-4">
          <%= flash[:recaptcha_error] %>
        </div>

        <div class="margin-top-30">
            <%= form_tag sign_up_external_employers_path, method: "post", class: '' do %>
            <div class="pb-4" align="center">
                <div class=" " style="width:400px;margin: auto;">
                    <%= email_field_tag :email, flash[:email], class: 'form-control', placeholder: "Email", autofocus: true, autocomplete: false, required: true %>
                </div>
            </div>

            <div class="form-group row pb-3 ">
              <div style="width: 300px;margin: auto;" class="">
                <%= recaptcha_tags %>
              </div>
            </div>

            <div align="center">
                <%= submit_tag "Sign Up", class: 'btn btn-fomema btn-blue-portal' %>&nbsp;&nbsp;
                <%= link_to "Cancel", external_root_path, class: 'btn btn-fomema btn-red-portal', style: "padding-top: 9px;" %>
            </div>

        </div>
        <% end %>
        <div>&nbsp;</div>
    </div>

</div>
<!-- /container -->