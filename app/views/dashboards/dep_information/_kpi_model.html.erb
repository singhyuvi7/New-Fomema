<div class="modal" id="myModal">
<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <!-- Modal Header -->
    <div class="modal-header">
      <h4 class="modal-title">Medical Review & Appeal</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <!-- Modal body -->
    <div class="modal-body">
      <div class="tabs-data">
        <ul class="nav nav-tabs sub-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#div_Stafftable7"> Staff Information</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#div_metrictable7"> Key Metric Details </a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="div_Stafftable7">
            <div class="table-responsive">
              <table class="table table-bordered table-data">
                <thead>
                  <tr>
                    <th>No</th>
                    <th style="width:30%"> Staff Name</th>
                    <th style="width:20%"> Designation</th>
                    <th style="width:12%"> Grade</th>
                    <th style="width:23%">
                      <select class="form-control thselect">
                        <option> Type of Leave </option>
                        <option>Annual Leave</option>
                        <option>Emergency Leave</option>
                      </select>
                    </th>
                    <th style="width:20%"> Medical Leave </th>
                  </tr>
                </thead>
                <tbody>
                  <%@users.each_with_index do |user,index|%>
                    <tr>
                      <td><%= index+1 %></td>
                      <td><%= user.name%></td>
                      <td><%= user.designation%></td>
                      <td>B3</td>
                      <td>10/24</td>
                      <td>2/22</td>
                    </tr>
                  <%end%>
                </tbody>
                <tfooter>
                 
                </tfooter>
              </table>
            </div>
          </div>
          <div class="tab-pane fade" id="div_metrictable7">
            <div class="table-responsive" style="height:100%; overflow-y:auto;">
              <table class="table table-bordered table-data">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Task</th>
                    <th>TAT</th>
                    <th> Target</th>
                    <th> KPI(%)</th>
                  </tr>
                </thead>
                <tbody>
                  <%@task_list.each_with_index do |task,index|%>
                    <tr>
                      <td><%= index+1%></td>
                      <td><%= task[:task]%></td>
                      <td><%= task[:TAT]%></td>
                      <td>><%= task[:target]%></td>
                      <td><%= task[:KPI]%>%</td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
            <ul class="pagination justify-content-end">
              <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="#">1</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="#">2</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="#">3</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="#">Next</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal footer -->
  </div>
</div>
</div>
