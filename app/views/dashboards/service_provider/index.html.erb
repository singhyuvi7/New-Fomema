        </div>
      </div>
    </div>
    <div class="chard-box pt-2">
      <div class="chard-box">
        <div class="wrapper">

          <!-- Sidebar  -->
          <%= render 'side_bar'%>

          <!-- Page Content  -->
          <div id="dash_board_5">
            <%= render 'dash_board_5_body'%>
          </div>
        </div>
      </div>
    </div>
  </div>
