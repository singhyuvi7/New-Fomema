<div class="card x-raycard">
  <div class="card-header"> X-ray Facility</div>
  <div class="card-body  p-0">
    <% if has_permission?('DASHBOARD_SP_XRAY_FACILITY') %>
      <ul class="card-ul">
        <li class="card-li dropdown-toggle" type="button" id="activeXrayListItem" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span> Active</span> <span style="font-weight: bold;">
          <div id='xrayactive'>
          <%= @xrayfacilityactive %>
          </div>
        </span>
          <div class="listcard-ul dropdown-menu custom-dropdown-xray w-100" aria-labelledby="div_doctor">
            <div style="background: #0032AB; color: #DDE7FF;width: 100%; float: left;">
              <span style="width: 50%;float: left;padding: 0px 7px;">State  </span>
              <span style="width: 50%;float: left;text-align: center;padding: 0px 10px 0px 37px;">Doctor</span>
            </div>
            <ul id="xrayStatesList">
              <% @xrayfacilitiesstates.each do |key, value| %>
                <li><span><%= key %> </span> <span id="<%= key %>Count"><%= value %></span></li>
              <% end %>
            </ul>
          </div>
        </li>
        <li><span> New</span> <span id="newxrayCount" ><%= @xrayfacilitynew %></span></li>
        <li><span> Withdrawal</span > <span id="withdrawalxrayCount" ><%= @xrayfacilitywithdrawl %></span></li>
        <li><span> Demised</span> <span id="demisedxrayCount" ><%= @xrayfacilitydemised %></span></li>
        <li><span> Non-compliance</span> <span id="noncompxrayCount"><%= @xrayfacilitynoncomp %></span></li>
      </ul>
    <% end %>
  </div>
</div>


<script>
    $(document).ready(function () {
        $('#activeXrayListItem').click(function () {
            $('.custom-dropdown').slideUp('fast');
            $('.custom-dropdown-lab').slideUp('fast');
            $('.custom-dropdown-radio').slideUp('fast');
            $('.custom-dropdown-xray').slideToggle('fast');
        });
    });
</script>