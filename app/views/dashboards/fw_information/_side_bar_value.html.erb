<script>
    function pending_view() {
        if ($('#pendingopen').hasClass("show")) {
            $('#pendingopen').removeClass("show")
        } else {
            $("#pendingopen").addClass("show");
        }
    }

    function onSelectAllClick(event) {
        const checkboxes = document.querySelectorAll('input[type="checkbox"]');
        const sections = document.querySelectorAll('.collapse');
        // Check or uncheck all checkboxes
        checkboxes.forEach(function (checkbox) {
            checkbox.checked = selectAllCheckbox.checked;
        });

        // Expand or collapse all sections based on the "Select All" checkbox's state
        sections.forEach(function (section) {
            if (selectAllCheckbox.checked) {
                section.classList.add('show'); // Add 'show' class to expand sections
            } else {
                section.classList.remove('show'); // Remove 'show' class to collapse sections
            }
        });
    }

</script>
