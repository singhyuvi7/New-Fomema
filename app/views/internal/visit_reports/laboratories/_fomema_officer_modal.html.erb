<div class="modal fade" id="fomemaOfficerModal" tabindex="-1" role="dialog" aria-labelledby="fomemaOfficer" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Fomema's Officer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form.fields_for :visit_report_laboratory do |visit_report_laboratory| %>
            <h3 class="text-center">E-Signature</h3>
            <h5 class="text-center">Fomema's Officer Acknowledgement</h5>
            <div class="wrapper">
                <%= visit_report_laboratory.signature_field :fomema_officer_signature %>
                <%= image_tag @visit_report.visit_report_laboratory.fomema_officer_signature, class: "signature-img" if !@visit_report.visit_report_laboratory.fomema_officer_signature.blank? %>
            </div>
            <div class="d-flex justify-content-center flex-wrap personnel-acknowledge-details text-center">
                <%= visit_report_laboratory.text_field :fomema_officer_name, class: 'form-control personnel-detail-input', placeholder: 'Full Name' %>
            </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning signature-clear-btn">Clear</button>
        <button type="button" class="btn btn-warning signature-cancel-edit-btn">Cancel</button>
        <button type="button" class="btn btn-warning signature-edit-btn">Edit</button>
        <button type="submit" class="btn btn-primary signature-save-btn" name="submit_action" value="summary_with_officer_signature" formnovalidate>Save</button>
      </div>
    </div>
  </div>
</div>