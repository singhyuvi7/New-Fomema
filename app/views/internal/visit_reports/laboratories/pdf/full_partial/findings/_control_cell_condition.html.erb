<tr class="finding-row method-field">
    <td class="table-index"></td>
    <td class="row-name"></td>
    <td colspan="3">
        <div class="acceptable-checkbox">
            <div class="acceptable">Acceptable</div>
            <div class="not-acceptable">Not Acceptable</div>
        </div>
    </td>
</tr>

<tr class="finding-row method-field">
    <td class="table-index"><%= row_no %>.</td>
    <td class="row-name"><%= ['blood_grouping'].include?(report_category) ? 'Control Cell Condition' : 'Control Condition' %></td>
    <td colspan="3">
        <div class="acceptable-checkbox-field">
            <div class="acceptable"><%= finding[:control_cell_condition] == 'YES' ? @checkbox_checked : @checkbox_unchecked %></div>
            <div class="not-acceptable"><%= finding[:control_cell_condition] == 'NO' ? @checkbox_checked : @checkbox_unchecked %></div>
        </div>
    </td>
</tr>
<% if finding.control_cell_condition == 'NO' %>
    <tr>
        <td class="table-index"></td>
        <td>
            <div class="finding-comment">
                <span class="bold">Expiry Date :</span>
                <span class="unbold"><%= finding.control_cell_condition_expiry_date %></span>
            </div>
        </td>
        <td colspan="3"></td>
    </tr>
<% end %>