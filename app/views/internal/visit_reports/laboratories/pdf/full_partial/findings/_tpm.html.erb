<tr class="finding-row method-field">
    <td class="table-index"><%= row_no %>.</td>
    <td class="row-name">TPM</td>
    <td colspan="3">
        <div class="acceptable-checkbox-field">
            <div class="acceptable"><%= finding[:tpm] == 'YES' ? @checkbox_checked : @checkbox_unchecked %></div>
            <div class="not-acceptable"><%= finding[:tpm] == 'NO' ? @checkbox_checked : @checkbox_unchecked %></div>
        </div>
    </td>
</tr>
<% if !finding.tpm_comment.blank? %>
    <tr>
        <td class="table-index"></td>
        <td>
            <div class="finding-comment">
                <span class="bold">Comment :</span>
                <span class="unbold"><%= finding.tpm_comment %></span>
            </div>
        </td>
        <td colspan="3"></td>
    </tr>
<% end %>