<tr class="finding-row method-field">
    <td class="table-index"></td>
    <td class="row-name"></td>
    <td colspan="3">
        <div class="yes-no-checkbox">
            <div class="acceptable">Yes</div>
            <div class="not-acceptable">No</div>
        </div>
    </td>
</tr>

<tr class="finding-row method-field">
    <td class="table-index"><%= row_no %>.</td>
    <td class="row-name">IQA</td>
    <td colspan="3">
        <div class="acceptable-checkbox-field">
            <div class="acceptable"><%= finding[:iqa] == 'YES' ? @checkbox_checked : @checkbox_unchecked %></div>
            <div class="not-acceptable"><%= finding[:iqa] == 'NO' ? @checkbox_checked : @checkbox_unchecked %></div>
        </div>
    </td>
</tr>
<% if !finding.iqa_comment.blank? %>
    <tr>
        <td class="table-index"></td>
        <td>
            <div class="finding-comment">
                <span class="bold">Comment :</span>
                <span class="unbold"><%= finding.iqa_comment %></span>
            </div>
        </td>
        <td colspan="3"></td>
    </tr>
<% end %>