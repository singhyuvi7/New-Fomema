<div class="card">

    <div class="card-header">
        <strong>Job Types</strong> - Job Type Detail
    </div>

    <div class="card-body">

        <%=render '/shared/all_flash' %>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="job_type_code">Name</label>
                    <p class="form-control-plaintext">
                        <%= @job_type.name %>
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="card-footer">

        <div class="text-right">
            <%=raw show_back_button(internal_job_types_path) %>
            <% if has_permission?('EDIT_JOB_TYPE') %>
                <%=raw show_edit_button(edit_internal_job_type_path(@job_type)) %>
            <% end %>
        </div>

    </div>

</div>
<!-- /.card -->

<div class="card">
    <div class="card-body">
        <ul class="list-group">
            <% if has_permission?("VIEW_AUDIT_JOB_TYPE") %>
                <li class="list-group-item">
                    <%= link_to "Audits", internal_job_type_audits_path(@job_type) %>
                </li>
            <% end %>
        </ul>
    </div>
</div>