<div class="card">

    <div class="card-header">
        <strong>Titles</strong> - Title Detail
    </div>

    <div class="card-body">

        <%=render '/shared/all_flash' %>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="title_code">Name</label>
                    <p class="form-control-plaintext">
                        <%= @title.name %>
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="card-footer">

        <div class="text-right">
            <%=raw show_back_button(internal_titles_path) %>
            <% if has_permission?('EDIT_TITLE') %>
                <%=raw show_edit_button(edit_internal_title_path(@title)) %>
            <% end %>
        </div>

    </div>

</div>
<!-- /.card -->

<div class="card">
    <div class="card-body">
        <ul class="list-group">
            <% if has_permission?("VIEW_AUDIT_TITLE") %>
                <li class="list-group-item">
                    <%= link_to "Audits", internal_title_audits_path(@title) %>
                </li>
            <% end %>
        </ul>
    </div>
</div>