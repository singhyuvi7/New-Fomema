<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Status</label>
            <p class="form-control-plaintext">
                <%= CallLog::STATUSES[@call_log.status] %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Type</label>
            <p class="form-control-plaintext">
                <%= CallLog::CALLABLE_TYPES[@call_log.callable_type] %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Code</label>
            <p class="form-control-plaintext">
                <%= "#{@call_log.callable&.name} (#{@call_log.callable&.code})" %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Call By</label>
            <p class="form-control-plaintext">
                <%= @call_log.creator&.name %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Call Time</label>
            <p class="form-control-plaintext">
                <%= @call_log.called_at&.strftime("%d/%m/%Y %I:%M:%S %p") %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Discussant Name</label>
            <p class="form-control-plaintext">
                <%= @call_log.discussant_name %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Phone Number</label>
            <p class="form-control-plaintext">
                <%= @call_log.phone %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Email</label>
            <p class="form-control-plaintext">
                <%= @call_log.email %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Fax Number</label>
            <p class="form-control-plaintext">
                <%= @call_log.fax %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Case Type</label>
            <p class="form-control-plaintext">
                <%= @call_log.call_log_case_type&.description %>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Issue</label>
            <pre class="form-control-plaintext"><%= @call_log.issue %></pre>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Remarks</label>
            <pre class="form-control-plaintext"><%= @call_log.comment %></pre>
        </div>
    </div>
</div>