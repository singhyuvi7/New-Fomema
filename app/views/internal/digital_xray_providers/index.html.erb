<div class="card">
    <div class="card-header">
        <strong>Digital X-Ray Providers</strong>
    </div>

    <!-- card-body -->
    <div class="card-body">
        <%=render "filter" %>

        <%=render '/shared/all_flash' %>

        <div class="row">
            <div class="col module-actions text-right">
                <% if has_permission?('create_digital_xray_provider') %>
                    <%=raw index_table_new_button(new_internal_digital_xray_provider_path) %>
                <% end %>
            </div>
        </div>
        <div class="table-responsive">
<table class="<%= index_table_class %>">
    <thead>
        <tr>
            <th class="module-row-numbers">#</th>
            <th>ID</th>
            <th>Code</th>
            <th>Name</th>
            <th class="module-row-actions">Action(s)</th>
        </tr>
    </thead>

    <tbody>
        <% if @digital_xray_providers.blank? %>
            <tr>
                <td colspan="5" class="text-danger">No records found.</td>
            </tr>
        <% else %>

            <% @digital_xray_providers.each.with_index((@digital_xray_providers.current_page - 1) * get_per + 1) do |digital_xray_provider, index| %>
            <tr>
                <td class="module-row-numbers"><%= index %></td>
                <td><%= digital_xray_provider.id %></td>
                <td><%= digital_xray_provider.code %></td>
                <td><%= digital_xray_provider.name %></td>
                <td class="module-row-actions">
                <%=raw index_table_show_button(internal_digital_xray_provider_path(digital_xray_provider)) %>
                <% if has_permission?('edit_digital_xray_provider') %>
                    <%=raw index_table_edit_button edit_internal_digital_xray_provider_path(digital_xray_provider) %>
                <% end %>
                <% if has_permission?('delete_digital_xray_provider') %>
                    <%=raw index_table_delete_button(internal_digital_xray_provider_path(digital_xray_provider)) %>
                <% end %>
                </td>
            </tr>
            <% end %>

        <% end %>
    </tbody>
</table>
        </div>

        <div class="row">
            <%= paginate @digital_xray_providers %>
        </div>
    </div>
    <!-- /card-body -->
</div>