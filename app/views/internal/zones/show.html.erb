<div class="card">

    <div class="card-header">
        <strong>Zones</strong> - Zone Detail
    </div>

    <div class="card-body">

        <%=render '/shared/all_flash' %>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="zone_code">Code</label>
                    <p class="form-control-plaintext">
                        <%= @zone.code %>
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="zone_code">Name</label>
                    <p class="form-control-plaintext">
                        <%= @zone.name %>
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="card-footer">

        <div class="text-right">
            <%=raw show_back_button(internal_zones_path) %>
            <% if has_permission?('EDIT_ZONE') %>
                <%=raw show_edit_button(edit_internal_zone_path(@zone)) %>
            <% end %>
        </div>

    </div>

</div>
<!-- /.card -->

<div class="card">
    <div class="card-body">
        <ul class="list-group">
            <% if has_permission?("VIEW_AUDIT_ZONE") %>
                <li class="list-group-item">
                    <%= link_to "Audits", internal_zone_audits_path(@zone) %>
                </li>
            <% end %>
        </ul>
    </div>
</div>