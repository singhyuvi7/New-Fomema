<div class="modal fade select2-modals" data-type="xray" id="xray-pairing-modal" role="dialog" aria-labelledby="xray-pairing" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">X-Ray Facility pairing recommendations</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <%= form_tag filter_xray_facilities_internal_doctors_path, method: :post, remote: true, class: "facilities-filter-form", data: {type: "xray"} do %>
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label">Code</label>

                                <div class="col-md-4">
                                    <%= text_field_tag :code, "", placeholder: "Code", class: "form-control ajax-input" %>
                                </div>

                                <label class="col-md-2 col-form-label">Name</label>

                                <div class="col-md-4">
                                    <%= text_field_tag :name, "", placeholder: "Name", class: "form-control ajax-input" %>
                                </div>
                            </div>

                            <!-- filter for states / postcodes / towns-->

                            <%= render 'internal/shared/filter_state_postcode_town' %>
                            
                        </div>

                        <div class="card-footer text-right">
                            <div class="btn btn-secondary clear-filters" data-type="xray">Clear filters</div>
                            <%= submit_tag "Search", class: "btn btn-primary filter-facilities-search", data: {type: "xray"} %>
                        </div>
                    </div>
                <% end %>

                <label class="col-form-label">Selected X-ray facilities</label>

                <table class="table mb-4">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                            <th>State</th>
                            <th>Postcode</th>
                            <th>Town</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody class="selected-facilities" data-type="xray">
                        <% if @xray_facilities.present? %>
                            <%= render :file => "internal/doctors/filter_xray_facilities", locals: {selected: true} %>
                        <% else %>
                            <tr class="no-selected-facilities" data-type="xray">
                                <td colspan="6">No x-ray facilities selected</td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>

                <label class="col-form-label">Search results</label>

                <table class="table search-facilities-table" data-type="xray">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                            <th>State</th>
                            <th>Postcode</th>
                            <th>Town</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="search-results">
                        <tr>
                            <td colspan="6">Search x-ray facilities</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary update-facilities" data-type="xray">Update X-Ray facilities</button>
            </div>
        </div>
    </div>
</div>