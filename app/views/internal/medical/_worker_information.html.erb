<div class="category-switchable" data-type="worker">
    <div class="p-4 border-bottom">
        <h3><u>PART I. FOREIGN WORKER INFORMATION</u></h3>
    </div>

    <div class="px-4 pb-4 border-bottom">
        <%= render partial: "/internal/transactions/worker_information_blocked_monitoring", locals: { transaction: transaction } %>
        <%= render partial: "/internal/transactions/worker_information_v02", locals: { transaction: transaction } %>
    </div>

    <div class="border-bottom px-4 pt-3">
        <label>Reasons for Pending Review</label>
        <% captured_review_criteria = transaction.pending_review_criteria_check %>

        <% if captured_review_criteria.present? %>
            <ol>
                <% captured_review_criteria.each do |criteria| %>
                    <% if criteria.include?("Case transferred by XQCC Department") %>
                        <li><%= raw criteria.gsub("Case transferred by XQCC Department", "<b class='text-danger'>Case transferred by XQCC Department</b>") %></li>
                    <% else %>
                        <li><%= raw criteria %></li>
                    <% end %>
                <% end %>
            </ol>
        <% else %>
            <p>None</p>
        <% end %>
    </div>
</div>