.card
  .card-header
    %strong MSPD - Radiographer Report
  .card-body
    = render '/shared/all_flash'
    .row-fluid
      .card
        .card-header
          %strong Search
        = form_with(url: radiographer_report_internal_mspd_reports_path(format: :xlsx), method: :get, local: true) do |form|
          .card-body
            .row
              .col-md-6
                .row.form-group
                  = form.label :start_date, 'Date From', class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :start_date, class: 'form-control datepicker datepicker-range-filter', data: { type: "start", target: "from"}, required: true
              .col-md-6
                .row.form-group
                  = form.label :end_date, 'Date To', class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :end_date, class: 'form-control datepicker datepicker-range-filter', data: { type: "start", target: "from"}, required: true
          .card-footer
            - if has_permission?("MSPD_REPORTS")
              .text-right
                = form.button :export, class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-download
                  Download
