.card
  .card-header
    %strong MSPD - Delay Transmission Xray Report
  .card-body
    = render '/shared/all_flash'
    .row-fluid
      .card
        .card-header
          %strong Search
        = form_with(url: xray_delay_transmission_internal_mspd_reports_path(format: :pdf), method: :get, local: true, html: { target: '_blank' }) do |form|
          .card-body
            .row
              .col-md-6
                .row.form-group
                  = form.label :transaction_date_from, class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :transaction_date_from, class: 'form-control datepicker datepicker-range-filter', data: { type: "start", target: "from"}
              .col-md-6
                .row.form-group
                  = form.label :transaction_date_to, class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :transaction_date_to, class: 'form-control datepicker datepicker-range-filter', data: { type: "start", target: "from"}
              .col-md-6
                .row.form-group
                  = form.label :doctor_code, class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :doctor_code, class: 'form-control'
              .col-md-6
                .row.form-group
                  = form.label :laboratory_code, class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :laboratory_code, class: 'form-control'
              .col-md-6
                .row.form-group
                  = form.label :xray_code, class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :xray_code, class: 'form-control'
          .card-footer
            - if has_permission?("MSPD_REPORTS")
              .text-right
                = link_to xray_delay_transmission_internal_mspd_reports_path, class: 'btn btn-sm btn-danger mx-1' do
                  %i.icon-trash
                  Clear
                = form.button :export, class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-download
                  Download
