                    <div class="card">
                        <div class="card-header">Radiologist</div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tr>
                                    <th>State</th>
                                    <th>Count</th>
                                </tr>
                                <% total_count = 0 %>
                                <% @radiologists.each do |row| %>
                                    <% total_count += row.active_count %>
                                    <tr>
                                        <th><%= row.state_namez %></th>
                                        <td><%= row.active_count %></td>
                                    </tr>
                                <% end %>
                                <tr>
                                    <th>Total</th>
                                    <td><%= total_count %></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->