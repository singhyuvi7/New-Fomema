<div class="card">
    <div class="card-header">
        Active DXLR By State As of <%= Time.now.strftime(get_standard_date_format) %>
    </div>

    <div class="card-body">
        <%=render '/shared/all_flash' %>

        <% if @doctors && @xray_facilities && @laboratories && @radiologists %>
            <div class="row">
                <div class="col-xl-3 col-md-6 col-sm-12">
                    <div class="card">
                        <div class="card-header">Doctor</div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tr>
                                    <th>State</th>
                                    <th>Count</th>
                                </tr>
                                <% total_count = 0 %>
                                <% @doctors.each do |row| %>
                                    <% total_count += row.active_count %>
                                    <tr>
                                        <th><%= row.state_namez %></th>
                                        <td><%= row.active_count %></td>
                                    </tr>
                                <% end %>
                                <tr>
                                    <th>Total</th>
                                    <td><%= total_count %></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 col-sm-12">
                    <div class="card">
                        <div class="card-header">X-Ray Facility</div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tr>
