<hr>
<% if @transactions.present? %>
    <% total_amount = 0 %>
    <table class="w-100">
        <tr class="text-left">
            <th class="px-6px py-3px">Date</th>
            <th class="px-6px py-3px">Worker Code</th>
            <th class="px-6px py-3px">Worker Name</th>
            <th class="px-6px py-3px">Amount</th>
        </tr>
        <% @transactions.each do |transaction| %>
            <% total_amount += transaction.final_amount %>
            <tr>
                <td class="px-6px py-3px"><%= transaction.certification_date.try(:strftime, get_standard_date_format) %></td>
                <td class="px-6px py-3px"><%= transaction.fw_code %></td>
                <td class="px-6px py-3px"><%= transaction.fw_name %></td>
                <td class="px-6px py-3px"><%= transaction.final_amount %></td>
            </tr>
        <% end %>
        <tr>
            <td class="px-6px py-3px border-top-1" colspan="3">Total</td>
            <td class="px-6px py-3px border-top-1"><%= total_amount %></td>
        </tr>
    </table>
<% end %>
<style>
.w-100 {
    width: 100%;
}

.mx-auto {
    margin-left: auto;
    margin-right: auto;
}

.px-6px {
    padding-left: 6px;
    padding-right: 6px;
}

.py-3px {
    padding-left: 3px;
    padding-right: 3px;
}

.text-left {
    text-align: left;
}

.border-top-1 {
    border-top: 1px solid black;
}
</style>