.card
  .card-header
    %strong Finance - Certification - Laboratory by Gender
  .card-body
    = render '/shared/all_flash'
    .row-fluid
      .card
        .card-header
          %strong Search
        = form_with(url: laboratory_certification_by_gender_internal_finance_reports_path(format: :xlsx), method: :get, local: true) do |form|
          .card-body
            .row
              .col-md-6
                .row.form-group
                  = form.label :certification_date_from, class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :certification_date_from, class: 'form-control datepicker datepicker-range-filter', data: { type: "start", target: "certification_date_from"}, required: true
              .col-md-6
                .row.form-group
                  = form.label :certification_date_to, class: 'col-sm-3 col-form-label'
                  .col-sm-9
                    = form.text_field :certification_date_to, class: 'form-control datepicker datepicker-range-filter', data: { type: "end", target: "certification_date_from"}, required: true
          .card-footer
            .text-right
              - if has_permission?("FINANCE_REPORTS")
                = form.button :export, class: 'btn btn-primary btn-sm' do
                  %i.fa.fa-download
                  Download
