<div class="px-4 pt-4">
    <h3><u>PCR Comment</u></h3>
</div>

<% @pcr_comments.sort.each do |pcr_comment| %>
    <div class="border border-dark mx-4 mb-4 p-4 rounded bg-light">
        <label class="font-size-8">PCR Review</label>

        <div class="d-flex">
            <b class="w-em-8">Released as</b>
            <p class="mb-0"><%= pcr_comment.result %></p>
        </div>

        <div class="d-flex">
            <b class="w-em-8">Released date</b>
            <p class="mb-0"><%= pcr_comment.transmitted_at.strftime("%d/%m/%Y") if pcr_comment.transmitted_at? %></p>
        </div>

        <div class="d-flex">
            <b class="w-em-8">Released by</b>
            <p class="mb-0"><%= pcr_comment.pcr_user.try(:name) %></p>
        </div>

        <label class="mt-3">Comment</label>

        <div class="border border-secondary mb-4 px-2 pt-2">
            <%= simple_format pcr_comment.comment %>
        </div>
    </div>
<% end %>