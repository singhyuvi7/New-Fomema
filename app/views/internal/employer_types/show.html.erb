<div class="card">

    <div class="card-header">
        <strong>Employer Types</strong> - Employer type detail
    </div>

    <div class="card-body">

        <%=render '/shared/all_flash' %>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="employer_type_code">ID</label>
                    <p class="form-control-plaintext">
                        <%= @employer_type.id %>
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="employer_type_code">Name</label>
                    <p class="form-control-plaintext">
                        <%= @employer_type.name %>
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="card-footer">

        <div class="text-right">
            <%=raw show_back_button(internal_employer_types_path) %>
            <% if has_permission?('EDIT_EMPLOYER_TYPE') %>
                <%=raw show_edit_button(edit_internal_employer_type_path(@employer_type)) %>
            <% end %>
        </div>

    </div>

</div>
<!-- /.card -->

<div class="card">
    <div class="card-body">
        <ul class="list-group">
            <% if has_permission?("VIEW_AUDIT_EMPLOYER_TYPE") %>
                <li class="list-group-item">
                    <%= link_to "Audits", internal_employer_type_audits_path(@employer_type) %>
                </li>
            <% end %>
        </ul>
    </div>
</div>