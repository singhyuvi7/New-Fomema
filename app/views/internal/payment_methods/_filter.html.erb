<div class="card">
    <div class="card-header">
        <strong>Filter</strong>
    </div>

    <%= form_tag internal_payment_methods_path, method: 'get' do |form| %>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Category</label>
                        <div class="col-sm-9">
                            <%= select_tag :category, options_for_select(PaymentMethod::CATEGORIES.invert, params[:category]), include_blank: form_select_option_text, class: 'form-control select2' %>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" id="name" value="<%= params[:name] %>">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="is_main" class="col-sm-3 col-form-label">Main Account</label>
                        <div class="col-sm-9">
                            <%= select_tag :is_main, options_for_select(PaymentMethod::IS_MAINS, params[:is_main]), include_blank: form_select_option_text, class: 'form-control select2' %>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="active" class="col-sm-3 col-form-label">Active</label>
                        <div class="col-sm-9">
                            <%= select_tag :active, options_for_select(PaymentMethod::ACTIVE, params[:active]), include_blank: form_select_option_text, class: 'form-control select2' %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
         <%= hidden_field_tag :per, params[:per] || get_per_options.first %>
        <div class="card-footer">
            <div class="text-right">
                <%=raw filter_clear_button internal_payment_methods_path %>
                <%=raw filter_button %>
            </div>
        </div>
    <% end %>
</div>