<% if(@case_count > 0) %>
    <div class="alert alert-warning">
        You already have <%= pluralize(@case_count, 'case') %> at hand and cannot pickup new one. <a href="<%= internal_xray_reviews_path(review_status: 'ASSIGN') %>">Click to see your case</a>
    </div>
<% end %>

<div class="card">

    <form method="POST" action="<%= pickup_internal_xqcc_pools_path %>">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="hidden" name="_method" value="PATCH">

        <div class="card-header">
            <strong>XQCC Pool</strong>
        </div>

        <!-- card-body -->
        <div class="card-body">

            <%=render "/shared/all_flash" %>

            <div class="row">
                <div class="col module-actions text-right">

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <% if(@pool_count > 0) %>
                        There are <%= pluralize(@pool_count, 'case') %> waiting to be pickup
                    <% else %>
                        There are no case to pickup
                    <% end %>
                </div>
            </div>
            <div class="row">
            </div>
        </div>
        <!-- /card-body -->
        <div class="card-footer text-right">
            <button type="submit" <% if !@can_pickup %> disabled <% end %> class="btn btn-primary" data-toggle="tooltip" title="Pickup">Pickup</button>
        </div>

    </form>
</div>