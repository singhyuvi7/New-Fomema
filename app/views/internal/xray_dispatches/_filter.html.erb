<div class="card">
    <div class="card-header">
        <strong>Filter</strong>
    </div>

    <%= form_tag internal_xray_dispatches_path, method: 'get' do |form| %>
    <%= hidden_field_tag :per, params[:per] || get_per_options.first %>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="code" class="col-sm-3 col-form-label">Dispatch Code</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="code" id="code" value="<%= params[:code] %>">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="code" class="col-sm-3 col-form-label">X-Ray Facility</label>
                        <div class="col-sm-9">
                            <%= select_tag "xray_facility_id",
                            options_from_collection_for_select(XrayFacility.select("id , name || ' (' || code || ')' as label").order(:label).all, 'id', 'label', params[:xray_facility_id]),
                            {include_blank: form_select_option_text,
                            class: 'form-control select2'} %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card-footer">
            <div class="text-right">
                <%=raw filter_clear_button internal_xray_dispatches_path %>
                <%=raw filter_button %>
            </div>
        </div>
    <% end %>
</div>