<%=render '/shared/all_flash' %>

<div class="card">
    <div class="card-header">
        System Configurations
        <div class="card-header-actions">
            <% if has_permission?('EDIT_SYSTEM_CONFIGURATION') and @pending_approvals.blank? %>
                <%=raw index_table_edit_button system_edit_internal_system_configurations_path %>
            <% elsif has_permission?('APPROVAL_SYSTEM_CONFIGURATION') and !@pending_approvals.blank? and !@pending_approvals.pluck(:request_by).include?(current_user.id) %>
                <a class="btn btn-sm btn-warning" data-toggle="tooltip" data-html="true" title="" data-original-title="Approval" href="<%= system_approval_internal_system_configurations_path %>">
                    <i class="fas fa-gavel"></i>
                </a>
            <% end %>
        </div>
        <!-- /.card-header-actions -->

    </div>
    <!-- /.card-header -->

    <div class="card-body">

        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#sc-system-basic" role="tab" aria-controls="home" id="basic">Basic Information</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#sc-system-policy" role="tab" aria-controls="profile" id="policy">Policy Related</a>
            </li>
        </ul>
        <!-- /.nav-tabs -->

        <div class="tab-content">
            <div class="tab-pane active" id="sc-system-basic" role="tabpanel">
                <% @basic_fields.each do |code| %>
                    <div class="form-group row">
                        <% if lookup_context.find_all("internal/system_configurations/show/_#{code}").any? %>
                            <%= render "internal/system_configurations/show/#{code}" %>
                        <% else %>
                            <label class="col-md-4 col-form-label">
                                <% if has_permission?("VIEW_AUDIT_SYSTEM_CONFIGURATION") %>
                                    <a href="<%= internal_system_configuration_audits_path(@system_configurations[code]) %>"><i class="fa fa-history"></i></a>
                                <% end %>
                                <%= @system_configurations[code].name %>
                            </label>
                            <div class="col-md-8">
                                <p class="form-control-plaintext"><%= @system_configurations[code].value %></p>
                                <% if @system_configurations[code].comment.present? %>
                                    <p class="form-control-plaintext"><%= @system_configurations[code].comment %></p>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                <% end %>
            </div>
            <div class="tab-pane" id="sc-system-policy" role="tabpanel">
                <% @policy_fields.each do |code| %>
                    <% if @system_configurations[code] %>
                        <div class="form-group row">
                            <% if lookup_context.find_all("internal/system_configurations/show/_#{code}").any? %>
                                <%= render "internal/system_configurations/show/#{code}" %>
                            <% else %>
                                <label class="col-md-4 col-form-label">
                                    <% if has_permission?("VIEW_AUDIT_SYSTEM_CONFIGURATION") %>
                                        <a href="<%= internal_system_configuration_audits_path(@system_configurations[code]) %>"><i class="fa fa-history"></i></a>
                                    <% end %>
                                    <%= raw @system_configurations[code].name %>
                                </label>
                                <div class="col-md-8">
                                    <p class="form-control-plaintext"><%= @system_configurations[code].value %></p>
                                    <% if @system_configurations[code].comment.present? %>
                                        <p class="form-control-plaintext"><%= @system_configurations[code].comment %></p>
                                    <% end %>
                                </div>
                            <% end %>
                        </div>
                    <% else %>
                        <div class="form-group row">
                            <div class="col text-danger"><%= code %> is missing! Admin please seed into system_configurations!</div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
        <!-- /.tab-content -->

    </div>
    <!-- /.card-body -->
</div>