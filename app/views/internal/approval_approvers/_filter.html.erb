<div class="card">
    <div class="card-header">
        <strong>Filter</strong>
    </div>

    <%= form_tag internal_approval_approvers_path, method: 'get' do |form| %>
        <%= hidden_field_tag :per, params[:per] || get_per_options.first %>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="code" class="col-sm-3 col-form-label">Category</label>
                        <div class="col-sm-9">
                            <%= select_tag :category, options_for_select(ApprovalApprover::CATEGORIES.invert, params[:category]), include_blank: form_select_option_text, class: 'form-control' %>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Status</label>
                        <div class="col-sm-9">
                            <%= select_tag :status, options_for_select(ApprovalApprover::STATUSES.invert, params[:status]), include_blank: form_select_option_text, class: 'form-control' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-right">
                <%=raw filter_clear_button internal_approval_approvers_path %>
                <%=raw filter_button %>
            </div>
        </div>
    <% end %>
</div>