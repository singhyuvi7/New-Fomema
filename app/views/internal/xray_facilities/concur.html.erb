<div class="card">
    <div class="card-header">
        <strong>X-Ray Facilities</strong> - Concur
    </div>
    <%= form_for @xray_facility, url: concur_update_internal_xray_facilities_path(@xray_facility), html: {class: "#{params[:action]}_xray_facility xray_facility-form"} do |form| %>

        <div class="card-body">

            <%= render 'form_readonly', { form: form } %>

            <div class="card">
                <div class="card-body">

                    <%=render "shared/approval_comments", { comments: @xray_facility.approval_request.comments } if @xray_facility.approval_request %>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <%= form.label :comment, "Concur Comment", for: 'concur_comment' %>
                                <textarea class="form-control" name="concur[comment]" id="concur_comment"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>

        <div class="card-footer">

            <div class="text-right">
                <%=raw edit_back_button(internal_xray_facilities_path) %>
                <%=raw approval_submit_concur_button %>
            </div>
        
        </div>
    <% end %>
</div>