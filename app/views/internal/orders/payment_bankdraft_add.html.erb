<div class="card">
    <div class="card-body">
        <div class="card">
            <div class="card-header">
                Add Bank Draft
            </div>
            <%= form_for @bank_draft, url: payment_bankdraft_add_internal_order_path(@order, @bank_draft), method: :put do |form| %>
                <div class="card-body">
                    <%=render 'payment_bankdraft_form', { form: form } %>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                
                    <div class="text-right">
                        <%=raw edit_back_button(payment_bankdraft_internal_order_path(@order)) %>
