<div class="card">

    <div class="card-header">
        <strong>States</strong> - State Detail
    </div>

    <div class="card-body">

        <%=render '/shared/all_flash' %>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="state_code">Code</label>
                    <p class="form-control-plaintext">
                        <%= @state.code %>
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="state_name">Name</label>
                    <p class="form-control-plaintext">
                        <%= @state.name %>
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="state_long_name">Long Name</label>
                    <p class="form-control-plaintext">
                        <%= @state.long_name %>
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="card-footer">

        <div class="text-right">
            <%=raw show_back_button(internal_states_path) %>
            <% if has_permission?('EDIT_STATE') %>
                <%=raw show_edit_button(edit_internal_state_path(@state)) %>
            <% end %>
        </div>

    </div>

</div>
<!-- /.card -->

<div class="card">
    <div class="card-body">
        <ul class="list-group">
            <% if has_permission?("VIEW_AUDIT_STATE") %>
                <li class="list-group-item">
                    <%= link_to "Audits", internal_state_audits_path(@state) %>
                </li>
            <% end %>
        </ul>
    </div>
</div>