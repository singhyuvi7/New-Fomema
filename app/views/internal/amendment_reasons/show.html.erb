<div class="card">

    <div class="card-header">
        <strong>Amendment Reasons</strong> - Amendment Reason Detail
    </div>

    <div class="card-body">

        <%=render "/shared/all_flash" %>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="amendment_reason_code">Code</label>
                    <p class="form-control-plaintext">
                        <%= @amendment_reason.code %>
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="amendment_reason_name">Name</label>
                    <p class="form-control-plaintext">
                        <%= @amendment_reason.name %>
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="card-footer">

        <div class="text-right">
            <%=raw show_back_button(internal_amendment_reasons_path) %>
            <% if has_permission?('EDIT_AMENDMENT_REASON') %>
                <%=raw show_edit_button(edit_internal_amendment_reason_path(@amendment_reason)) %>
            <% end %>
        </div>

    </div>

</div>
<!-- /.card -->

<div class="card">
    <div class="card-body">
        <ul class="list-group">
            <% if has_permission?("VIEW_AUDIT_AMENDMENT_REASON") %>
                <li class="list-group-item">
                    <%= link_to "Audits", internal_amendment_reason_audits_path(@amendment_reason) %>
                </li>
            <% end %>
        </ul>
    </div>
</div>