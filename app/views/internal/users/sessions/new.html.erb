<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <h1>Login</h1>
                    <p class="text-muted">Sign In to your account</p>
                    <div id="notice" class="text-info"><%= flash[:notice] %></div>
                    <div id="alert" class="text-danger"><%= flash[:alert] %></div>

                    <%= form_for(resource, as: resource_name, url: new_internal_user_session_path()) do |f| %>
                    <input type="hidden" name="internal_user[login_from]" value="int_employer_login">
                    <input type="hidden" name="internal_user[login_user_type]" value="nios">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-people"></i>
                                </span>
                            </div>

                            <%= f.select :login_type, options_for_select({"Username" => "Code", "Email" => "Email"}, cookies[:login_type]), {}, class: "form-control" %>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-user"></i>
                                </span>
                            </div>

                            <%= f.text_field :login, placeholder: "Username", autofocus: true, required: true, class: "form-control no-uppercase username-field" %>
                        </div>

                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-lock"></i>
                                </span>
                            </div>

                            <%= f.password_field :password, placeholder: "Password", required: true, class:'form-control' %>
                        </div>

                        <% if devise_mapping.rememberable? %>
                            <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                            </div>
                        <% end %>

                        <div class="row">
                            <div class="col-6">
                                <%= f.submit "Log in",class: 'btn btn-primary px-4' %>
                            </div>

                            <div class="col-6 text-right">
                                <%= link_to "Forgot password?", new_internal_user_password_path, class: "px-0" %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                <div class="card-body text-center">
                    <div>
                        <img src="<%= asset_url("fomema-logo-25.png") %>" class="img-fluid" style="background-color: transparent; max-height:180px;">
                        <h3 class="text-center mt-5">
                            Welcome to<br>
                            New Integrated Online System (NIOS)
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%# render "devise/shared/links" %>