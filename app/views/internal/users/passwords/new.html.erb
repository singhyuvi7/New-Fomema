<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <h1>Reset Password</h1>
                    <p class="text-muted">Type in your email address below to send a reset password link to your email address.</p>
                    <%=render "/shared/all_flash" %>

                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-user"></i>
                                </span>
                            </div>

                            <%= f.email_field :email, autocomplete: "email", placeholder: "Email address", autofocus: true, required: true, class: 'form-control no-uppercase' %>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <%= f.submit "Reset my password",class: 'btn btn-primary px-4 col-12' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                <div class="card-body text-center">
                    <div>
                        <img src="<%= asset_url("fomema-logo-25.png") %>" class="img-fluid" style="background-color: transparent; max-height:180px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% if flash[:not_found].present? %>
  <div id="dialog-not-found" class="hidden" title="Not Found">
    <p>The password reset link appears to be invalid.</p>
  </div>

  <% content_for :page_end_scripts do %>
    <script>
      openDialog({target: '#dialog-not-found', type: 'danger'});
    </script>
  <% end %>
<% end %>

<% if flash[:expired].present? %>
  <div id="dialog-expired" class="hidden" title="Message [ID: 41]">
    <p>Password reset request has expired.</p>
  </div>

  <% content_for :page_end_scripts do %>
    <script>
      openDialog({target: '#dialog-expired', type: 'danger'});
    </script>
  <% end %>
<% end %>

